<div class="form">
	<h1>Create a New User</h1>

	<h3><%= flash[:correct] if flash[:correct] %></h3>

	<%= form_for @user, :url => users_path, :html => { :multipart => true } do |f| %>
			<h2>Upload profile pic</h2><h3>NOT optional</h3>
			<%= f.file_field :avatar %> 
			<br> 
			<h2> Enter your details </h2>
			<li><%= f.label "First Name" %></li>
			<p><%= f.text_field :fname, class: 'field' %></p>
			<li><%= f.label "Last Name" %></li>
			<p><%= f.text_field :lname, class: 'field' %></p>
			<li><%= f.label "Username" %></li>
			<p><%= f.text_field :username, class: 'field' %></p>
			<li><%= f.label "E-mail" %></li>
			<p><%= f.text_field :email, class: 'field' %></p>
			<li><%= f.label "Password" %></li>
			<p><%= f.password_field :password, class: 'field' %></p>
			<li><%= f.label "Confirm Password" %></li>
			<p><%= f.password_field :password_confirmation, class: 'field' %></p>
			<li><%= f.label "Country" %></li>
			<p><%= f.text_field :country, class: 'field' %></p>
			<%= f.submit "Create", class: "btn" %>
	<% end %>

	


</div>