<div class="wrapper-high">
	<div class="form">
		<h1> Create New Post </h1>

		<%= flash[:correctPost] if flash[:correctPost] %>

		<%= form_for @post do |f| %>
			<h2><%= f.label "Title" %></h2>
			<p><%= f.text_field :title, :class => "textfield" %></p>
			<h2><%= f.label "Body" %></h2>
			<p><%= f.text_area :body %></p>
			<%= f.submit "Create Post" %>
		<% end %>
	</div>
</div>
